<script>
function generarParticulas(){
  for(let i=0;i<30;i++){
    const p=document.createElement('div');
    p.className='particula';
    p.style.left=Math.random()*window.innerWidth+'px';
    p.style.top=window.innerHeight+Math.random()*200+'px';
    p.style.animationDuration=(3+Math.random()*3)+'s';
    document.body.appendChild(p);
    setTimeout(()=>p.remove(),6000);
  }
}
setInterval(generarParticulas,500);

document.addEventListener('mousemove', e=>{
  const varita=document.querySelector('.varita');
  if(varita)varita.style.left=(e.clientX)+'px';
});

function calcularResultado(){
  const puntos={harry:0,hermione:0,ron:0,draco:0,luna:0,ginny:0,voldemort:0};
  document.querySelectorAll('input[type="radio"]:checked').forEach(r=>puntos[r.value]++);
  let personaje="",max=0;
  for(let p in puntos) if(puntos[p]>max){max=puntos[p];personaje=p;}
  const descripciones={
    harry:"‚ö° Sos Harry Potter: valiente, protector y capaz de sacrificarte por los dem√°s.",
    hermione:"üìö Sos Hermione Granger: inteligente, justa y siempre un paso adelante.",
    ron:"üî• Sos Ron Weasley: leal, humano y con un gran coraz√≥n.",
    draco:"üêç Sos Draco Malfoy: complejo, ambicioso y marcado por tus conflictos internos.",
    luna:"üåô Sos Luna Lovegood: aut√©ntica, sensible y ves lo que otros no.",
    ginny:"ü©∏ Sos Ginny Weasley: valiente, decidida y con una chispa rebelde.",
    voldemort:"üíÄ Sos Voldemort: ambicioso, obsesivo y capaz de todo por el poder."
  };
  const colores={harry:"#c42b2b",hermione:"#c42b2b",ron:"#c42b2b",ginny:"#c42b2b",draco:"#2eb82e",luna:"#2a52be",voldemort:"#2eb82e"};
  const imagenesPersonaje={
    harry:"https://i.imgur.com/HH0iZjw.png",
    hermione:"https://i.imgur.com/1SFFN5Y.png",
    ron:"https://i.imgur.com/5YZU9DG.png",
    draco:"https://i.imgur.com/4RyE4YN.png",
    luna:"https://i.imgur.com/N2Ddx2q.png",
    ginny:"https://i.imgur.com/1KfoJZV.png",
    voldemort:"https://i.imgur.com/RQ6kzIY.png"
  };
  const resultadoDiv=document.getElementById("resultado");
  resultadoDiv.innerHTML=`<div class="varita"></div>
    <img src="${imagenesPersonaje[personaje]}" alt="${personaje}" class="personaje-img">
    <p>${descripciones[personaje]}</p>`;
  crearChispas(resultadoDiv,colores[personaje]);
  const audio=document.getElementById("audioMagia");
  audio.currentTime=0;
  audio.play();
}

function crearChispas(contenedor,color){
  for(let i=0;i<15;i++){
    const chispa=document.createElement("div");
    chispa.className="chispa";
    chispa.style.background=color;
    chispa.style.setProperty('--x',(Math.random()*2-1).toFixed(2));
    chispa.style.setProperty('--y',(Math.random()*1).toFixed(2));
    contenedor.appendChild(chispa);
    setTimeout(()=>chispa.remove(),800);
  }
}
</script>

